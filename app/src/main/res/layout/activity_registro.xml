<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#38184C"
    tools:context=".registro">

    <Button
        android:id="@+id/btn_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="24dp"
        android:text="Home"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="38dp"
        android:text="Registrarse"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/input_user_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:hint="ContraseÃ±a"
        android:inputType="text"
        android:textAlignment="center"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/button"
        app:layout_constraintStart_toStartOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/input_user_correo" />

    <EditText
        android:id="@+id/input_user_telefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:hint="Telefono"
        android:inputType="text"
        android:textAlignment="center"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/input_user_correo"
        app:layout_constraintTop_toBottomOf="@+id/input_user_apellido" />

    <EditText
        android:id="@+id/input_user_apellido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:hint="Apellido"
        android:inputType="text"
        android:textAlignment="center"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/input_user_telefono"
        app:layout_constraintStart_toStartOf="@+id/input_user_telefono"
        app:layout_constraintTop_toBottomOf="@+id/input_user_nombre" />

    <EditText
        android:id="@+id/input_user_correo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:hint="Correo"
        android:inputType="text"
        android:textAlignment="center"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/input_user_password"
        app:layout_constraintStart_toStartOf="@+id/input_user_password"
        app:layout_constraintTop_toBottomOf="@+id/input_user_telefono" />

    <EditText
        android:id="@+id/input_user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="184dp"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:hint="Id Usuario"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/input_user_nombre"
        app:layout_constraintStart_toStartOf="@+id/input_user_nombre"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_user_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/input_user_apellido"
        app:layout_constraintStart_toStartOf="@+id/input_user_apellido"
        app:layout_constraintTop_toBottomOf="@+id/input_user_id" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="51dp"
        android:layout_marginBottom="36dp"
        android:text="Registro"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/input_user_id"
        app:layout_constraintStart_toStartOf="@+id/input_user_id" />

</androidx.constraintlayout.widget.ConstraintLayout>